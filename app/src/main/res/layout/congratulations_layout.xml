<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/dialogBox_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/dialogBox_message"
        app:layout_constraintStart_toStartOf="@+id/dialogBox_message"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/coins" />

    <TextView
        android:id="@+id/dialogBox_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="casual"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:text="@string/dialogBox_message"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/game_Size_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogBox_icon" />

    <Button
        android:id="@+id/dialogBox_button_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/abel"
        android:text="@string/congrats_ok"
        android:textSize="@dimen/game_Size_secondary"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/dialogBox_message"
        app:layout_constraintStart_toStartOf="@+id/dialogBox_message"
        app:layout_constraintTop_toBottomOf="@+id/dialogBox_message" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogBox_button_ok"
        tools:layout_editor_absoluteX="193dp" />

    <Space
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/dialogBox_message"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="279dp" />

    <Space
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dialogBox_message"
        tools:layout_editor_absoluteY="218dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
